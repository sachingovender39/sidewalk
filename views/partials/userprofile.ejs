<div class="container profile_cont">
	<div class="row profile_row">

                <div class="col-12 text-center profile_background">
                        <img src="https://www.flaticon.com/svg/static/icons/svg/3443/3443461.svg" alt="" class="img-circle img-responsive" width='100'height="100">
                </div>
								<div class="col-12 profile_details">
										<h2 class="user_header"><%=username%></h2>
										<%if (myprofile){%>
										<button class="update"type="button" name="updateUser"data-toggle="modal" data-target="#UserModal"><i class="fas fa-pen"></i></button>
										<%}%>
										<br>
										<span class="profile_attr"><strong>About: </strong> <%=about%> </span>
										<br>
										<span class="profile_attr"><strong>Email: </strong> <%=email%> </span>
										<br>
										<div class="row">
											<div class="col">
												<div class="emphasis">
														<h2><strong><%=posts.length%></strong></h2>
														<p><small>Posts</small></p>
												</div>	
											</div>
											<div class="col">
												<%if (myprofile){%>
													<button id="updatebutton"class="btn btn-lg postbutton"type="button" name="button" data-toggle="modal" data-target="#UpdateModal">Update</button>
												<%}%>
											</div>
										</div>
								</div>
								<!-- Modal -->
								<div class="modal fade" id="UserModal" role="dialog">
									<div class="modal-dialog">

										<!-- Modal content-->
										<div class="modal-content">
											<div class="modal-header">
												<h4 class="modal-title">Change Username</h4>
												<button type="button" class="close" data-dismiss="modal">&times;</button>
											</div>
											<div class="modal-body">
												<form method='post' action='/profile/username'>
												<label>New Username:</label>
												<input class='form-control'type="text" name="username" value="<%=username%>">
												<br>
												<button class="btn btn-lg postbutton" type="submit" name="update">Update</button>
												</form>
											</div>
										</div>

									</div>
								</div>
								<!-- Modal -->
								<div class="modal fade" id="UpdateModal" role="dialog">
									<div class="modal-dialog">

										<!-- Modal content-->
										<div class="modal-content">
											<div class="modal-header">
												<h4 class="modal-title">Change Details</h4>
												<button type="button" class="close" data-dismiss="modal">&times;</button>
											</div>
											<div class="modal-body">
												<form method='post' action='/profile/update'>
												<label>Email</label>
												<input class='form-control' type="text" name="new_email" value="<%=email%>">
												<br>
												<label>About</label>
												<br>
												<textarea class='form-control' name="new_about" rows="8" cols="80" ><%=about%></textarea>
												<button id = "modal_btn"class="btn btn-lg postbutton" type="submit" name="update">Update</button>
												</form>
											</div>
										</div>

									</div>
								</div>
            </div>
	</div>
